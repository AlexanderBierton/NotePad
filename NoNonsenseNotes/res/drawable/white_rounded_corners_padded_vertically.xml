<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Bottom 2dp Shadow -->
    <item
        android:bottom="@dimen/card_editor_shadow_bottom"
        android:left="0dp"
        android:right="0dp">
        <shape android:shape="rectangle" >
            <solid android:color="#d8d8d8" />

            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:bottom="@dimen/card_editor_top_bottom"
        android:left="0dp"
        android:right="0dp">
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />

            <corners android:radius="2dp" />
        </shape>
    </item>

</layer-list>