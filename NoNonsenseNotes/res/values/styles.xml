<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:custom="http://schemas.android.com/apk/res/com.nononsenseapps.notepad" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ViewPagerStyleDarkGrey">
        <item name="android:background">@android:drawable/dark_header</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="ViewPagerStyleDarkTransparent" parent="@style/ViewPagerStyleDarkGrey">
        <item name="android:background">@null</item>
    </style>

    <style name="FragmentHint">
        <item name="android:enabled">false</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
        <item name="android:paddingTop">4dip</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="ListDividersOnePixel">
        <item name="android:divider">?android:attr/dividerVertical</item>
        <item name="android:dividerHeight" tools:ignore="PxUsage">1px</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="ListTransparentDividersLarge" parent="@style/ListDividersOnePixel">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">4dp</item>
    </style>

    <style name="EditorLayoutStyle">
        <item name="android:layout_marginTop">@dimen/editor_vertical_margin</item>
        <item name="android:background">?editorBackgroundColor</item>
        <item name="android:paddingBottom">@dimen/editor_vertical_margin_bottom</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="EditorTextStyle">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:layout_marginTop">@dimen/editor_vertical_margin</item>
        <item name="linkify">true</item>
        <item name="titleFontFamily">robotocondensed</item>
        <item name="titleFontStyle">bold</item>
        <item name="titleRelativeSize">1.3</item>
    </style>
    
    <style name="TaskListItem">
        <item name="android:background">@drawable/tasklist_item_darkcard_bg</item>
    </style>

</resources>