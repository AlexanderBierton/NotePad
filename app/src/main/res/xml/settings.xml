<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="preference_screen">

    <PreferenceCategory android:title="@string/settings_cat_appearance">

        <ListPreference
            android:defaultValue="@string/const_preference_theme_light"
            android:dialogTitle="@string/settings_theme_dialog"
            android:entries="@array/preference_theme_entries"
            android:entryValues="@array/preference_theme_values"
            android:key="@string/const_preference_theme_key"
            android:summary="Selected option should be here"
            android:title="@string/settings_theme"/>
        <ListPreference
            android:defaultValue=""
            android:dialogTitle="@string/settings_lang_dialog"
            android:key="@string/const_preference_locale_key"
            android:summary="Selected option should be here"
            android:title="@string/settings_lang"/>

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/pref_editor_links"
            android:summary=""
            android:title="@string/clickable_links"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/notifications">
        <RingtonePreference
            android:key="@string/const_preference_ringtone_key"
            android:ringtoneType="notification"
            android:showDefault="true"
            android:showSilent="true"
            android:title="@string/sound"/>

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/const_preference_vibrate_key"
            android:title="@string/vibrate"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_gtask_section_key"
        android:persistent="false"
        android:title="@string/gtasks">
        <SwitchPreference
            android:defaultValue="false"
            android:key="syncEnablePref"
            android:summary="@string/gtasks_sync_info"
            android:title="@string/settings_sync_enable_title"/>

        <Preference
            android:dependency="syncEnablePref"
            android:key="@string/const_preference_gtask_account_key"
            android:summary=""
            android:title="@string/settings_account_title"/>

        <SwitchPreference
            android:defaultValue="true"
            android:dependency="syncEnablePref"
            android:key="syncInBackground"
            android:summary="@string/background_sync_info"
            android:title="@string/background_sync"/>
        <SwitchPreference
            android:defaultValue="true"
            android:dependency="syncEnablePref"
            android:key="syncOnStart"
            android:summary="@string/sync_on_start_info"
            android:title="@string/sync_on_start"/>
        <SwitchPreference
            android:defaultValue="true"
            android:dependency="syncEnablePref"
            android:key="syncOnChange"
            android:summary="@string/sync_on_change_info"
            android:title="@string/sync_on_change"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_sdcard_section_key"
        android:persistent="false"
        android:title="@string/sd_card">
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/const_preferencesdcard_enabled_key"
            android:summary="@string/sd_card_summary"
            android:title="@string/sd_card_sync"/>
        <Preference
            android:dependency="@string/const_preferencesdcard_enabled_key"
            android:key="@string/const_preference_sdcard_dir_key"
            android:summary="@string/directory_summary"
            android:title="@string/directory"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/legacy_backup">
        <Preference
            android:key="backup_import"
            android:title="@string/backup_import"/>
    </PreferenceCategory>

</PreferenceScreen>